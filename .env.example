# Mamba Agents Configuration
# Copy this file to .env and customize as needed

# Model Backend Configuration
MAMBA_MODEL_BACKEND__BASE_URL=http://localhost:11434/v1
MAMBA_MODEL_BACKEND__MODEL=llama3.2
# MAMBA_MODEL_BACKEND__API_KEY=your-api-key-here
MAMBA_MODEL_BACKEND__TIMEOUT=30.0
MAMBA_MODEL_BACKEND__MAX_RETRIES=3

# Logging Configuration
MAMBA_LOGGING__LEVEL=INFO
MAMBA_LOGGING__STRUCTURED=false

# Retry Configuration
MAMBA_RETRY__RETRY_LEVEL=2
MAMBA_RETRY__INITIAL_BACKOFF_SECONDS=1.0
MAMBA_RETRY__MAX_BACKOFF_SECONDS=60.0

# Token Tracking Configuration
MAMBA_TOKEN_TRACKING__ENCODING=cl100k_base

# Context Management Configuration
MAMBA_CONTEXT__STRATEGY=sliding_window
MAMBA_CONTEXT__TRIGGER_THRESHOLD_TOKENS=100000
MAMBA_CONTEXT__TARGET_TOKENS=80000
MAMBA_CONTEXT__PRESERVE_RECENT_TURNS=10

# Streaming Configuration
MAMBA_STREAMING__STREAM_MODEL_RESPONSES=true
MAMBA_STREAMING__STREAM_TOOL_RESULTS=true
